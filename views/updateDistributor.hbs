<form action="/distributor/edit/{{data._id}}" method="post" novalidate="novalidate">
{{#each data}}
    <div class="form-group">
        <label for="cc-payment" class="control-label mb-1">Nama</label>
        <input id="cc-pament" name="nama" type="text" class="form-control" value="{{data.nama}}" aria-required="true"
            aria-invalid="false" placeholder="Nama Distributor">
    </div>
    <div class="form-group has-success">
        <label for="cc-name" class="control-label mb-1">Alamat</label>
        <input id="cc-name" name="alamat" type="text" class="form-control cc-name valid" value="{{this.alamat}}"
            data-val="true" data-val-required="Mohon isi Alamat Distributor" autocomplete="cc-name" aria-required="true"
            aria-invalid="false" aria-describedby="cc-name-error" placeholder="Alamat Distributor">
        <span class="help-block field-validation-valid" data-valmsg-for="cc-name" data-valmsg-replace="true"></span>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="cc-exp" class="control-label mb-1">Nomor HP</label>
                <input id="cc-exp" name="noHp" type="number" class="form-control cc-exp" value="{{this.noHp}}"
                    data-val="true" data-val-required="Mohon isi Nomor Handphone Distributor"
                    data-val-cc-exp="Mohon isi dengan Angka" placeholder="Nomor Handphone Distributor"
                    autocomplete="cc-exp">
                <span class="help-block" data-valmsg-for="cc-exp" data-valmsg-replace="true"></span>
            </div>
        </div>
        <div class="col-6">
            <label for="x_card_code" class="control-label mb-1">Pemilik</label>
            <div class="input-group">
                <input id="x_card_code" name="pemilik" type="text" class="form-control cc-cvc" value="{{pemilik}}"
                    data-val="true" data-val-required="Mohon isi Nama Pemilik" data-val-cc-cvc="Mohon isi dengan Huruf"
                    autocomplete="off" placeholder="Nama Pemilik">

            </div>
        </div>
    </div>
    <div>
        <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
            <i class="fa fa-paper-plane fa-lg"></i>&nbsp;
            <span>Simpan</span>
            {{!-- <span id="payment-button-sending" style="display:none;">Sendingâ€¦</span> --}}
        </button>
    </div>
    {{!-- {{/each}} --}}
{{/each}}
</form>